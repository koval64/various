<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView android:id="@+id/sizeDisplay"
    	android:background="#333333"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="12pt"/>

	<ScrollView android:id="@+id/ScrollView01"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent">
		<LinearLayout android:id="@+id/LinearLayout02"
			android:layout_width="wrap_content"
			android:layout_height="30px"
			android:orientation="vertical">
		  	<LinearLayout
		      	android:orientation="horizontal"
		      	android:layout_width="wrap_content"
		      	android:layout_height="wrap_content">
		    	<Button android:id="@+id/pickNumber7"
		    		android:gravity="center_horizontal"
		        	android:layout_width="wrap_content"
		        	android:layout_height="wrap_content"
		        	android:text=" 7 "
		        	android:textSize="15pt"/>
		    	<Button android:id="@+id/pickNumber8"
		        	android:layout_width="wrap_content"
		        	android:layout_height="wrap_content"
		        	android:text=" 8 "
		        	android:textSize="15pt"/>
		    	<Button android:id="@+id/pickNumber9"
		        	android:layout_width="wrap_content"
		        	android:layout_height="wrap_content"
		        	android:text=" 9 "
		        	android:textSize="15pt"/>
		  	</LinearLayout>
		
		  	<LinearLayout
		      	android:orientation="horizontal"
		      	android:layout_width="wrap_content"
		      	android:layout_height="wrap_content"
		      	android:gravity="center_vertical">
		    	<Button android:id="@+id/pickNumber4"
		    		android:gravity="center_horizontal"
		        	android:layout_width="wrap_content"
		        	android:layout_height="wrap_content"
		        	android:text=" 4 "
		        	android:textSize="15pt"/>
		    	<Button android:id="@+id/pickNumber5"
		        	android:layout_width="wrap_content"
		        	android:layout_height="wrap_content"
		        	android:text=" 5 "
		        	android:textSize="15pt"/>
		    	<Button android:id="@+id/pickNumber6"
		        	android:layout_width="wrap_content"
		        	android:layout_height="wrap_content"
		        	android:text=" 6 "
		        	android:textSize="15pt"/>
		  	</LinearLayout>
		
		  	<LinearLayout
		      	android:orientation="horizontal"
		      	android:layout_width="wrap_content"
		      	android:layout_height="wrap_content">
		    	<Button android:id="@+id/pickNumber1"
		    		android:gravity="center_horizontal"
		        	android:layout_width="wrap_content"
		        	android:layout_height="wrap_content"
		        	android:text=" 1 "
		        	android:textSize="15pt"/>
		    	<Button android:id="@+id/pickNumber2"
		        	android:layout_width="wrap_content"
		        	android:layout_height="wrap_content"
		        	android:text=" 2 "
		        	android:textSize="15pt"/>
		    	<Button android:id="@+id/pickNumber3"
		        	android:layout_width="wrap_content"
		        	android:layout_height="wrap_content"
		        	android:text=" 3 "
		        	android:textSize="15pt"/>
		  	</LinearLayout>
		
		  	<LinearLayout
		      	android:orientation="horizontal"
		      	android:layout_width="wrap_content"
		      	android:layout_height="wrap_content">
		    	<Button android:id="@+id/pickBackspace"
		    		android:gravity="center_horizontal"
		        	android:layout_width="wrap_content"
		        	android:layout_height="wrap_content"
		        	android:text="DEL"
		        	android:textSize="11pt"/>
		    	<Button android:id="@+id/pickNumber0"
		        	android:layout_width="wrap_content"
		        	android:layout_height="wrap_content"
		        	android:text=" 0 "
		        	android:textSize="15pt"/>
		    	<Button android:id="@+id/pickSpace"
		        	android:layout_width="wrap_content"
		        	android:layout_height="wrap_content"
		        	android:text="   "
		        	android:textSize="15pt"/>
		    	<Button android:id="@+id/pickEnter"
		        	android:layout_width="wrap_content"
		        	android:layout_height="wrap_content"
		        	android:text="RETURN"
		        	android:textSize="11pt"/>
		  	</LinearLayout>

		    <TextView android:id="@+id/resultDisplay"
		    	android:background="#333333"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:text=""
		        android:textSize="9pt"/>
		</LinearLayout>
	</ScrollView>

</LinearLayout>
